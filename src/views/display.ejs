<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h2>ALL USER</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Email</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < dataTable.length; i++) { %>
          <tr>
            <td><%= dataTable[i].email %></td>
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].phoneNumber %></td>
            <td><%= dataTable[i].gender %></td>
            <td><%= dataTable[i].address %></td>
            <td>
              <a href="/edit-crud?id=<%= dataTable[i].id %>"
                style="background-color: aqua; width: 60px;" 
                type="button">Edit</a>
              <a href="/delete-crud?id=<%= dataTable[i].id %>" 
                style="background-color: red; width: 60px;" 
                type="button">Delete</a>
            </td>
            
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
